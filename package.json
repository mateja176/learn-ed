{
  "name": "with-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "format": "prettier -c **/*.{ts,tsx}",
    "lint": "eslint **/*.{ts,tsx}",
    "test": "jest",
    "ci": "cross-env CI=true concurrently --kill-others-on-fail --names format,lint,type-check,test --prefix-colors yellow,cyan,blue,green yarn:format yarn:lint yarn:type-check yarn:test",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build:functions": "tsc --project functions",
    "serve:functions": "yarn build:functions && firebase emulators:start --only functions",
    "shell:functions": "yarn build:functions && firebase functions:shell",
    "start:functions": "yarn shell",
    "deploy:functions": "firebase deploy --only functions",
    "logs:functions": "firebase functions:log"
  },
  "main": "./functions/lib/index.js",
  "dependencies": {
    "ahooks": "^2.6.0",
    "color": "^3.1.2",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "grommet": "^2.15.0",
    "grommet-icons": "^4.4.0",
    "lodash": "^4.17.20",
    "next": "latest",
    "qs": "^6.9.4",
    "ramda": "^0.27.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-toastify": "^6.0.8",
    "styled-components": "^5.2.0",
    "url-join": "^4.0.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.5",
    "@types/color": "^3.0.1",
    "@types/jest": "^26.0.13",
    "@types/lodash": "^4.14.161",
    "@types/node": "^12.12.21",
    "@types/ramda": "^0.27.17",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^5.1.3",
    "@types/url-join": "^4.0.0",
    "@types/uuid": "^8.3.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "firebase-functions-test": "^0.2.2",
    "firebase-tools": "^8.10.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.4.2",
    "react-is": "^16.13.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "license": "MIT"
}
